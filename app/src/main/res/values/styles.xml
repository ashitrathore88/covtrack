<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/archivo_regular</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorWhite</item>
        <item name="android:colorControlNormal">@color/colorWhite</item>
        <item name="android:colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="CustomTextInputLayout2" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:colorAccent">@color/colorGray</item>
        <item name="android:colorControlNormal">@color/colorGray</item>
        <item name="android:colorControlActivated">@color/colorGray</item>
    </style>
    <style name="CustomTextInputEditor">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="CustomTextInputEditor2">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColor">@color/colorPrimaryLite</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:backgroundTint">@color/colorGray</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="CustomButton">
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:minHeight">@dimen/margin_40</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="SubDivisionItembg">
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/margin_40</item>
        <item name="android:background">@drawable/btn_bg_blue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="CustomButton2">
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/margin_40</item>
        <item name="android:background">@drawable/btn_bg_blue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="DonateButton">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/margin_40</item>
        <item name="android:background">@drawable/btn_bg_blue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:padding">@dimen/padding_12</item>
    </style>

    <style name="CustomTextViewTitle">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="CustomTextViewTitle_primaryColour">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="CustomTextView">
        <item name="android:textSize">@dimen/txt_size_13</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/padding_3</item>
        <item name="android:background">@drawable/txt_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>


    <style name="CustomTextView_bg_stoke">
        <item name="android:textSize">@dimen/txt_size_13</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/padding_5</item>
        <item name="android:background">@drawable/txt_bg_stoke</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="CustomTextView_bg">
        <item name="android:textSize">@dimen/txt_size_13</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/padding_5</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>
    <style name="sub_division_bg_stoke">
        <item name="android:textSize">@dimen/txt_size_13</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/txt_bg_stoke</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/margin_10</item>

    </style>

    <style name="CustomRadioButton_primaryColour">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/margin_3</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/margin_5</item>

    </style>

    <style name="CustomRadioButtonTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="android:colorControlNormal">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt_size_18</item>

    </style>

    <style name="CustomRadioButtonTheme_promaryColour" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/txt_size_18</item>

    </style>

    <style name="CustomSpinnerheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
